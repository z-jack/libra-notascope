{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 400,
    "height": 400,
    "data": [
      {
        "name": "table",
        "values": [
          {"x": 50, "y": 50},
          {"x": 100, "y": 100},
          {"x": 150, "y": 150}
        ]
      }
    ],
    "signals": [
      {"name": "start", "value": null},
      {"name": "end", "value": null}
    ],
    "marks": [
      {
        "type": "rect",
        "name": "brush",
        "encode": {
          "enter": {
            "fill": {"value": "#999"},
            "fillOpacity": {"value": 0.2},
            "stroke": {"value": "#000"}
          },
          "update": {
            "x": {"signal": "start[0]"},
            "y": {"signal": "start[1]"},
            "x2": {"signal": "end[0]"},
            "y2": {"signal": "end[1]"}
          }
        },
        "events": [
          {
            "name": "brush",
            "type": "[mousedown, window:mouseup] > window:mousemove!",
            "update": "[mousedown, window:mouseup] > window:mousemove!",
            "translate": "[mousedown, window:mouseup] > window:mousemove!"
          }
        ]
      },
      {
        "type": "symbol",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "x": {"field": "x"},
            "y": {"field": "y"},
            "fill": {"value": "steelblue"},
            "stroke": {"value": "white"},
            "strokeWidth": {"value": 2},
            "size": {"value": 100}
          },
          "update": {
            "fill": {"scale": "brush", "field": "selected", "mult": "scales"}
          }
        }
      }
    ]
  }
  