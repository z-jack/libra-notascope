{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 400,
    "height": 400,
    "autosize": "none",
    "data": [
      {
        "name": "scatterData",
        "url": "your_data.json"  // 替换为你的数据文件路径
      }
    ],
    "signals": [
      {"name": "zoom", "value": 1, "bind": {"input": "range", "min": 0.1, "max": 3, "step": 0.1}},
      {"name": "xOffset", "value": 0},
      {"name": "yOffset", "value": 0}
    ],
    "scales": [
      {
        "name": "xScale",
        "type": "linear",
        "domain": {"data": "scatterData", "field": "x"},
        "range": [0, {"signal": "width"}]
      },
      {
        "name": "yScale",
        "type": "linear",
        "domain": {"data": "scatterData", "field": "y"},
        "range": [{"signal": "height"}, 0]
      }
    ],
    "marks": [
      {
        "type": "symbol",
        "from": {"data": "scatterData"},
        "encode": {
          "update": {
            "x": {"scale": "xScale", "field": "x"},
            "y": {"scale": "yScale", "field": "y"},
            "size": {"value": 100},
            "fill": {"value": "steelblue"}
          }
        }
      }
    ],
    "marks": [
      {
        "type": "symbol",
        "from": {"data": "scatterData"},
        "encode": {
          "update": {
            "x": {"scale": "xScale", "field": "x"},
            "y": {"scale": "yScale", "field": "y"},
            "size": {"value": 100},
            "fill": {"value": "steelblue"}
          }
        }
      }
    ],
    "marks": [
      {
        "type": "symbol",
        "from": {"data": "scatterData"},
        "encode": {
          "update": {
            "x": {"scale": "xScale", "field": "x", "offset": {"signal": "xOffset"}},
            "y": {"scale": "yScale", "field": "y", "offset": {"signal": "yOffset"}},
            "size": {"value": 100},
            "fill": {"value": "steelblue"}
          }
        }
      }
    ],
    "config": {
      "view": {"stroke": null},
      "mark": {"tooltip": null}
    }
  }
  