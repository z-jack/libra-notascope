{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 500,
    "height": 300,
    "data": [
      {
        "name": "world",
        "url": "your_data_url.geojson",
        "format": {"type": "geojson"}
      },
      {
        "name": "brush",
        "on": [
          {"trigger": "mousedown", "insert": "mousedown"},
          {"trigger": "mouseup", "remove": "mousedown"}
        ]
      },
      {
        "name": "selected",
        "on": [
          {"trigger": "[mousedown, window:mouseup] > window:mousemove!", "modify": "brush", "values": "datum"}
        ]
      },
      {
        "name": "mousedown",
        "values": {}
      }
    ],
    "scales": [
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "world", "field": "your_field"},
        "range": ["lightgray", "lightblue"]
      }
    ],
    "marks": [
      {
        "type": "geoshape",
        "from": {"data": "world"},
        "encode": {
          "enter": {
            "fill": {"scale": "color", "field": "your_field"},
            "stroke": {"value": "white"},
            "strokeWidth": {"value": 2}
          },
          "update": {
            "fill": {"scale": "color", "field": "your_field"}
          },
          "hover": {
            "fill": {"value": "lightblue"}
          },
          "select": {
            "fill": {"value": "red"}
          }
        }
      },
      {
        "type": "rect",
        "name": "brush",
        "encode": {
          "update": {
            "fill": {"value": "transparent"},
            "fillOpacity": {"value": 0.2},
            "stroke": {"value": "gray"},
            "strokeWidth": {"value": 1}
          }
        },
        "from": {"data": "brush"}
      }
    ]
  }
  