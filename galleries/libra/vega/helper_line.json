{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 400,
    "height": 300,
    "padding": 5,
    "data": [
      {
        "name": "table",
        "values": [
          {"category": "A", "value": 28},
          {"category": "B", "value": 55},
          {"category": "C", "value": 43},
          {"category": "D", "value": 91},
          {"category": "E", "value": 81},
          {"category": "F", "value": 53},
          {"category": "G", "value": 19},
          {"category": "H", "value": 87}
        ]
      }
    ],
    "scales": [
      {
        "name": "xscale",
        "type": "band",
        "domain": {"data": "table", "field": "category"},
        "range": "width"
      },
      {
        "name": "yscale",
        "type": "linear",
        "domain": {"data": "table", "field": "value"},
        "range": "height",
        "nice": true
      }
    ],
    "marks": [
      {
        "type": "rect",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "category", "band": 0.5},
            "width": {"scale": "xscale", "band": 0.5},
            "y": {"scale": "yscale", "field": "value"},
            "y2": {"scale": "yscale", "value": 0}
          },
          "update": {
            "fill": {"value": "steelblue"}
          },
          "hover": {
            "fill": {"value": "firebrick"}
          }
        }
      },
      {
        "type": "line",
        "from": {"data": "helperLine"},
        "encode": {
          "enter": {
            "x": {"value": 0},
            "x2": {"field": "x2"},
            "y": {"field": "y"},
            "y2": {"field": "y"}
          },
          "update": {
            "stroke": {"value": "red"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "text",
        "from": {"data": "helperLine"},
        "encode": {
          "enter": {
            "x": {"field": "x2", "offset": 5},
            "y": {"field": "y", "offset": -8},
            "text": {"field": "value"},
            "fill": {"value": "red"}
          }
        }
      }
    ],
    "signals": [
      {
        "name": "hover",
        "on": [
          {"events": "mousemove", "update": "group()"}
        ]
      },
      {
        "name": "helperLineX",
        "value": 0,
        "on": [
          {"events": "mousemove", "update": "xscale.invert(hover[0])"}
        ]
      },
      {
        "name": "helperLine",
        "update": "hover ? [{x2: width, y: yscale(helperLineX), value: helperLineX}] : []"
      }
    ]
  }
  