{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 400,
    "height": 400,
    "data": [
      {
        "name": "table",
        "values": [
          {"x": 50, "y": 50},
          {"x": 100, "y": 100},
          {"x": 150, "y": 150}
        ],
        "format": {"parse": {"x": "number", "y": "number"}}
      }
    ],
    "signals": [
      {"name": "selected", "value": null},
      {"name": "clicked", "value": null}
    ],
    "marks": [
      {
        "type": "symbol",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "x": {"field": "x"},
            "y": {"field": "y"},
            "fill": {"value": "steelblue"},
            "stroke": {"value": "white"},
            "strokeWidth": {"value": 2},
            "size": {"value": 100}
          },
          "update": {
            "fill": {
              "test": "datum === clicked",
              "value": "red"
            }
          },
          "hover": {
            "fill": {"value": "orange"}
          }
        },
        "events": {
          "click": {"signal": "clicked = datum"}
        }
      }
    ]
  }
  