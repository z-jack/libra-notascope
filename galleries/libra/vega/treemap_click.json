{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 400,
    "height": 400,
    "autosize": "none",
    "signals": [
      {"name": "click", "value": null}
    ],
    "data": [
      {
        "name": "tree",
        "url": "your_data.json",
        "transform": [
          {
            "type": "stratify",
            "key": "id",
            "parentKey": "parentId"
          },
          {
            "type": "treemap",
            "field": "value",
            "sort": {"field": "value", "order": "descending"},
            "round": true,
            "padding": 1
          }
        ]
      },
      {
        "name": "highlight",
        "source": "tree",
        "transform": [
          {"type": "filter", "expr": "click && click.datum === datum"}
        ]
      }
    ],
    "scales": [
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "tree", "field": "id"},
        "range": "category"
      }
    ],
    "marks": [
      {
        "type": "rect",
        "from": {"data": "tree"},
        "encode": {
          "enter": {
            "x": {"field": "x0"},
            "y": {"field": "y0"},
            "x2": {"field": "x1"},
            "y2": {"field": "y1"},
            "fill": {"scale": "color", "field": "id"}
          },
          "update": {
            "x": {"field": "x0"},
            "y": {"field": "y0"},
            "x2": {"field": "x1"},
            "y2": {"field": "y1"},
            "fill": {"scale": "color", "field": "id"}
          }
        }
      },
      {
        "type": "rect",
        "from": {"data": "highlight"},
        "encode": {
          "enter": {
            "x": {"field": "x0"},
            "y": {"field": "y0"},
            "x2": {"field": "x1"},
            "y2": {"field": "y1"},
            "fill": {"value": "red"},
            "opacity": {"value": 0.5}
          },
          "update": {
            "x": {"field": "x0"},
            "y": {"field": "y0"},
            "x2": {"field": "x1"},
            "y2": {"field": "y1"},
            "fill": {"value": "red"},
            "opacity": {"value": 0.5}
          }
        }
      }
    ],
    "config": {
      "view": {"stroke": null},
      "mark": {"tooltip": null}
    }
  }
  